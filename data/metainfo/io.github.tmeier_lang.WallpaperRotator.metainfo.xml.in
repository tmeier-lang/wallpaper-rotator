<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Wallpaper Rotator</name>
  <summary>Rotate desktop wallpapers automatically</summary>
  <description>
    <p>
      Automatically change your GNOME desktop background at regular intervals
      using images from a selected folder. Includes controls for interval,
      manual changes, and preview.
    </p>
  </description>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/tmeier-lang/wallpaper-rotator/main/data/screenshots/screenshot1.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/tmeier-lang/wallpaper-rotator/main/data/screenshots/screenshot2.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="@VERSION@" date="@DATE@"/>
  </releases>
  <content_rating type="oars-1.1"/>
  <developer_name>tmeier-lang</developer_name>
  <url type="homepage">https://github.com/tmeier-lang/wallpaper-rotator</url>
  <url type="bugtracker">https://github.com/tmeier-lang/wallpaper-rotator/issues</url>
  <url type="vcs-browser">https://github.com/tmeier-lang/wallpaper-rotator</url>
</component>